<h1>My Portfolio</h1>

<h3>Search for Stocks</h3>
<div id="stock-lookup">
	<%= form_tag search_stocks_path, remote: true, method: :get, id: "stock-lookup-form" do %>
		<div id="stock-lookup">
			<%= render partial: "users/lookup" %>
		</div>
	<% end %>
</div>

<div id="results">
	<%= render partial: "stocks/result" %>
</div>

<div id="stock-list">
	<%= render partial: "stocks/list", locals: { stocks: current_user.stocks, user: current_user } %>
</div>

